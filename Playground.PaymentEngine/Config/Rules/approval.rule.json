                "Expression": "true",
                "Actions": {
                    "OnSuccess": {
                        "Name": "HttpCustomAction",
                        "Context": {
                            "customContextInput": "customerId"
                        }
                    },
                    "OnFailure": null
                }
            }
        ]
    }
